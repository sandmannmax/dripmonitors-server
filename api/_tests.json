{
  "info": {
    "name": "lazyshoebot",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Status Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": "pm.test(\"Respond is Status 200\", () => { pm.response.to.have.status(200); });",
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"url": "http://localhost:3000/status"
			}
		},
		{
			"name": "404 Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": "pm.test(\"Respond is Status 404\", () => { pm.response.to.have.status(404); }); pm.test(\"Respond is Json Content\", () => { pm.response.to.be.json; });",
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"url": "http://localhost:3000/nichtvorhanden"
			}
		},
		{
			"name": "Login Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": "pm.test(\"Respond is Status 200\", () => { pm.response.to.have.status(200); }); pm.test(\"Respond is Json Content\", () => { pm.response.to.be.json; });",
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"url": "http://localhost:3000/user/login",
				"body": {
					"mode": "raw",
					"raw": "{\"username\": \"testuser\", \"password\": \"testpassword\"}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				}
			}
		},		
		{
			"name": "Login Wrong Credentials Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": "pm.test(\"Respond is Status 401\", () => { pm.response.to.have.status(401); }); pm.test(\"Respond is Json Content\", () => { pm.response.to.be.json; });",
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"url": "http://localhost:3000/user/login",
				"body": {
					"mode": "raw",
					"raw": "{\"username\": \"testuser\", \"password\": \"hm\"}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				}
			}
		}
	],
	"protocolProfileBehavior": {}
}